<header>
  <div class="navbar bg-base-100 fixed top-0 left-0 w-full z-50">
    <div class="flex">
      <%= link_to '/' do %>
        <%= image_tag 'logo.png', alt: "Memo Sprout logo", class: "h-14 w-auto" %>
      <% end %>
    </div>
    <h2 class="text-sm leading-8 text-gray-900">- 記録して振り返り、思考を育てる -</h2>
    <div class="flex-none  ml-auto">
      <h2 class="text-error text-sm leading-8 p-3">
        <%= logged_in? && current_user.email.start_with?("guest_") ? "ゲストログイン中" : "ログイン中" %>
      </h2>
      <ul class="menu menu-horizontal px-1">
        <li><%= link_to "新規作成", new_memo_path %></li>
        <li>
          <details class="relative"> <!-- relative：子要素の絶対位置を指定 -->
            <summary>Menu</summary>
            <ul class="bg-base-100 rounded-t-none p-2 w-44 min-w-max absolute right-0">
              <li><%= link_to "メモ一覧", memos_path %></li>
              <li>
                <div class="tooltip tooltip-left" data-tip="アップデートをお待ちください">
                  使い方
                </div>
              </li>
              <li>
                <%= link_to "お気に入り一覧", memo_favorites_path %>
              </li>
              <li>
                <%= link_to "https://x.com/share?text=#{CGI.escape("一言ずつの入力で出来事を掘り下げてみよう🌱\n#MemoSprout　#めもすぷらうと\n#{root_url}")}", target: "_blank", rel: "noopener noreferrer" do %>
                  アプリをシェア<i class="fa-brands fa-x-twitter"></i>
                <% end %>
              </li>
              <li><%= link_to "ログアウト", logout_path, data: { turbo_method: :delete } %></li>
            </ul>
          </details>
        </li>
      </ul>
    </div>
  </div>
</header>
