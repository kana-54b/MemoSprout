<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <% content_for :title, t('.title') %><br>

      <div class="mt-6 text-lg leading-8 text-gray-600">
        <!-- アプリ説明文 -->
        <%= simple_format(t('.introduction')) %>
      </div>
      <br><br>
      <% if current_user.nil? %> <!-- ログインしていない場合に表示 -->
      <br>
        <!-- 登録なしで使ってみる -->
        <%= form_with url: guest_login_path, method: :post, local: true do |f| %>
          <%= f.button t('.guest_login'), class: "btn btn-success" %>
        <% end %>
        <br>
        <div class="bg-[#f4f4f4] rounded-lg p-6"> <!-- 角丸と背景色 -->
        <br>
          <!-- Google認証ボタン -->
          <%= link_to auth_at_provider_path(provider: :google), class: "flex justify-center" do %>
            <%= image_tag "web_light_sq_SI.svg", alt: "Sign in with Google", class: "google-button" %>
          <% end %>

          <!-- または -->
          <br><div class="divider text-gray-500 text-sm"><%= t('.or') %></div><br>

          <%= form_with url: login_path, method: :post, local: true do |f| %>
            <%= f.label :email, t('.email'), class: "label" %>
            <%= f.email_field :email, placeholder: "memosprout@example.com", class: "input input-bordered w-full max-w-xs" %>
            <br>
            <br>
            <%= f.label :password, t('.password'), class: "label" %>
            <%= f.password_field :password, class: "input input-bordered w-full max-w-xs" %>
            <br><br>
            <div class="tooltip" data-tip="アップデートをお待ちください">
              <!-- パスワードをお忘れの方はこちら -->
              <%= link_to t('.Forgot password?'), "#", class: "btn btn-link" %>
            </div>
            <br><br>
            <%= submit_tag t('.login'), class: "btn btn-warning" %>
          <% end %>
          <br><br>
          <%= link_to t('.sign_up'), new_user_path, class: "btn btn-error" %>
          <br><br>
        </div>
      <% end %>
      <br>
      <br>
      <div class="bg-[#f4f4f4] rounded-lg p-6"> <!-- 角丸と背景色 -->
        <!-- このアプリでできること -->
        <%= t('.description') %>
        <br>
        <br>
        <div class="carousel carousel-center bg-neutral rounded-box max-w-md space-x-4 p-4 w-96 ">
          <div class="carousel-item">
            <div class="card bg-base-100 w-96 shadow-xl rounded-box">
              <figure>
                <img
                  src="https://img.daisyui.com/images/stock/photo-1609621838510-5ad474b7d25d.webp"
                  alt="Shoes" />
              </figure>
              <div class="card-body">
                <h2 class="card-title">①</h2>
                <p>
                  <br><br>
                    <!--  その日の出来事を…深掘りします。 -->
                    <%= simple_format(t('.description_1')) %>
                  <br><br>
                  <p><div align="right">※ スライド  →</div></p>
                  <br><br>
                </p>
              </div>
            </div>
          </div>

            <div class="carousel-item">
            <div class="card bg-base-100 w-96 shadow-xl">
              <figure>
                <img
                  src="https://img.daisyui.com/images/stock/photo-1414694762283-acccc27bca85.webp"
                  alt="Shoes" />
              </figure>
              <div class="card-body">
                <h2 class="card-title">②</h2>
                <p>
                  <br><br>
                    <!--  なぜそのように感じたのか…整理します。 -->
                    <%= simple_format(t('.description_2')) %>
                  <br><br><br>
                </p>
              </div>
            </div>
          </div>

            <div class="carousel-item">
            <div class="card bg-base-100 w-96 shadow-xl">
              <figure>
                <img
                  src="https://img.daisyui.com/images/stock/photo-1665553365602-b2fb8e5d1707.webp"
                  alt="Shoes" />
              </figure>
              <div class="card-body">
                <h2 class="card-title">③</h2>
                <p>
                  <br><br>
                    <!--  その日の出来事を…見つめ直しましょう。 -->
                    <%= simple_format(t('.description_3')) %>
                  <br><br><br>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>