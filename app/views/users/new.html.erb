<div class="bg-white py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <% content_for :title, t('.title') %>

      <!-- ユーザー登録 -->
      <h1 class=text-3xl><%= t('.title') %></h1>
      <br><br>
      <div class="bg-[#f4f4f4] rounded-lg p-6"> <!-- 角丸と背景色 -->
        <%= form_with model: @user do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

          <!-- 姓 / （※姓または名のいずれかは入力が必要です） -->
          <%= f.label :last_name, "#{I18n.t('activerecord.attributes.user.last_name')} #{I18n.t('activerecord.helpers.hints.user.name')}", class: "label" %>
          <%= f.text_field :last_name, class: "input input-bordered w-full max-w-xs" %>
          <br>
          <br>
          <!-- 名 -->
          <%= f.label :first_name, "#{I18n.t('activerecord.attributes.user.first_name')} ", class: "label" %>
          <%= f.text_field :first_name, class: "input input-bordered w-full max-w-xs" %>
          <br>
          <br>
          <!-- メールアドレス -->
          <%= f.label :email, "#{I18n.t('activerecord.attributes.user.email')} (*)", class: "label" %>
          <%= f.email_field :email, class: "input input-bordered w-full max-w-xs" %>
          <br>
          <br>
          <!-- パスワード / (※4文字以上) -->
          <%= f.label :password, "#{I18n.t('activerecord.attributes.user.password')} (*)#{I18n.t('activerecord.helpers.hints.user.password')}", class: "label" %>
          <%= f.password_field :password, class: "input input-bordered w-full max-w-xs" %>
          <br>
          <br>
          <!-- パスワード（再入力） -->
          <%= f.label :password_confirmation, "#{I18n.t('activerecord.attributes.user.password_confirmation')} (*)", class: "label" %>
          <%= f.password_field :password_confirmation, class: "input input-bordered w-full max-w-xs" %>
          <br><br><br>
          <%= f.submit t('.submit'), class: "btn btn-error" %>
        <% end %>
      </div>
    </div>
  </div>
</div>